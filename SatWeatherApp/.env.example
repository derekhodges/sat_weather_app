# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Stripe Configuration (for payments - deprecated, use RevenueCat instead)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# RevenueCat Configuration (for in-app purchases)
# Get these from https://www.revenuecat.com after creating your app
EXPO_PUBLIC_REVENUECAT_IOS_KEY=appl_xxxxxxxxxxxxxxxxxxxxxxxx
EXPO_PUBLIC_REVENUECAT_ANDROID_KEY=goog_xxxxxxxxxxxxxxxxxxxxxxxx

# Feature Flags
# ENABLE_AUTH: Show login screen (false = skip login)
EXPO_PUBLIC_ENABLE_AUTH=false

# ENABLE_SUBSCRIPTIONS: Enforce tier restrictions (true = features locked by plan)
# Set to true to test feature gating, false to unlock all features
EXPO_PUBLIC_ENABLE_SUBSCRIPTIONS=true

# MOCK_PREMIUM: Bypass all tier checks (true = all features unlocked)
# Only used if ENABLE_SUBSCRIPTIONS is false
EXPO_PUBLIC_MOCK_PREMIUM=false

# App Configuration
EXPO_PUBLIC_APP_ENV=development
